{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Latch",
  "version": "0.1.0",
  "identifier": "com.latch.passwordmanager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Latch",
        "width": 640,
        "height": 280,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://accounts.google.com https://oauth2.googleapis.com https://icons.duckduckgo.com; img-src 'self' https://icons.duckduckgo.com data: https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self'"
    }
  },
  "plugins": {
    "biometric": {
      "i18n": {
        "allowed": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/password.ico"
    ]
  }
}
